<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.cesed.marcio.calc.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/txtOp"
        android:textSize="50dp"
        android:layout_weight="0.90"
        android:textAlignment="textEnd" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="7"
                    android:id="@+id/btn7"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn7" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="8"
                    android:id="@+id/btn8"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn8" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="9"
                    android:id="@+id/btn9"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn9" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="รท"
                    android:id="@+id/btnDiv"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey800"
                    android:textColor="#ffffff"
                    android:onClick="clickBtnDiv" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="4"
                    android:id="@+id/btn4"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn4" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="5"
                    android:id="@+id/btn5"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn5" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="6"
                    android:id="@+id/btn6"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn6" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="x"
                    android:id="@+id/btnMult"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey800"
                    android:textColor="#ffffff"
                    android:onClick="clickBtnMult" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="1"
                    android:id="@+id/btn1"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="3"
                    android:id="@+id/btn3"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey700"
                    android:textColor="#ffffff"
                    android:onClick="clickBtn3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="+"
                    android:id="@+id/btnPlus"
                    android:textSize="22dp"
                    android:background="@color/ColorGrey800"
                    android:textColor="#ffffff"
                    android:onClick="clickBtnPlus" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="DEL"
                android:id="@+id/btnDel"
                android:textSize="22dp"
                android:background="@color/Red500"
                android:textColor="#ffffff"
                android:onClick="clickBtnDel" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="0"
                android:id="@+id/btn0"
                android:textSize="22dp"
                android:background="@color/ColorGrey700"
                android:textColor="#ffffff"
                android:onClick="clickBtn0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="="
                android:id="@+id/btnEquals"
                android:textSize="22dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:onClick="clickBtnResult" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="-"
                android:id="@+id/btnMin"
                android:textSize="22dp"
                android:background="@color/ColorGrey800"
                android:textColor="#ffffff"
                android:onClick="clickBtnMin" />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
